<% provide :title, t(".head") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "microposts.new.head" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t ".head" %></h1>
  <p>
    <%= t ".content" %>
    <%= link_to t(".head"), Settings.links.railstutorial %>
  </p>
  <%= link_to t("signup"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag(Settings.links.img_logo,
                      alt: t(".alt_logo"), width: "200px"), home_path %>
<% end %>
