<% provide :title, t(".head") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "layouts/partials/follow_form" if logged_in? %>
    <% if @user.microposts.any? %>
      <h3><%= "#{t ".title_microposts"} #{@user.microposts.size}" %></h3>
      <ol class="microposts">
        <%= render partial: "layouts/partials/micropost",
                   collection: @microposts, as: :item %>
      </ol>
      <%= paginate @microposts %>
    <% end %>
  </div>
</div>
