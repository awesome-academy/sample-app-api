<% @user ||= current_user %>
<div class="stats">
  <a href="<%= user_followings_path @user %>">
    <strong id="following" class="stat">
      <%= @user.following.size %>
    </strong>
    <%= t "follow.following" %>
  </a>
  <a href="<%= user_followers_path @user %>">
    <strong id="followers" class="stat">
      <%= @user.followers.size %>
    </strong>
    <%= t "follow.follower" %>
  </a>
</div>
